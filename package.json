{
  "name": "electronscreenshot",
  "version": "1.0.0",
  "description": "基于ElectronJS的截屏软件",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSoon/ElectronScreenshot.git"
  },
  "author": {
    "name": "J.Soon",
    "email": "serdeemail@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JSoon/ElectronScreenshot/issues"
  },
  "homepage": "https://github.com/JSoon/ElectronScreenshot#readme",
  "engines": {
    "node": "^14.18"
  },
  "dependencies": {
    "canvas": "^2.6.1",
    "fabric": "^4.6.0"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "21.2.0"
  },
  "build": {
    "appId": "com.electron.electronscreenshot",
    "productName": "electronscreenshot",
    "copyright": "Copyright © year 2021",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "npmRebuild": false,
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icon.ico",
      "publisherName": "soon"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "uninstallDisplayName": "${productName}_${env.NODE_ENV}_${version}",

      "artifactName": "${productName}_${env.NODE_ENV}_${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "shortcutName": "${productName}"
    }
  }
}
